<xml>
	<set name="PROJECT_DIR" value="${this_dir}/" />

	<files id='haxe'>
		<compilerflag value="-I${PROJECT_DIR}vendor/openal/include" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${PROJECT_DIR}vendor/openal/include" />
	</files>

	<copyFile toolId="exe" name="OpenAL32.dll" from="${PROJECT_DIR}vendor/openal/lib/windows/x64" overwrite="true" if="windows" />

	<target id="haxe">
		<section if="windows">
			<libpath name="${PROJECT_DIR}vendor/openal/lib/windows/x64" if="windows" />
			<lib name="OpenAL32.lib" />
		</section>

		<section if="macos || iphoneos || iphonesim">
			<vflag name="-framework" value="OpenAL" />
		</section>

		<section if="linux">
			<lib name="-lopenal" />
		</section>
	</target>
</xml>
