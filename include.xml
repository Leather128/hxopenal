<xml>
	<set name="PROJECT_DIR" value="${this_dir}/" />

	<files id='haxe'>
		<compilerflag value="-I${PROJECT_DIR}vendor/openal/include/" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${PROJECT_DIR}vendor/openal/include/" />
	</files>

	<target id="haxe">

		<section if="windows">

			<flag value="-libpath:${PROJECT_DIR}vendor/openal/lib/windows/x64" />
			<lib name="OpenAL32.lib" />

		</section>

		<section if="linux">

			<lib name="-lopenal" />

		</section>

	</target>
</xml>